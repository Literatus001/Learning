    private static int count = 0;

    public String getStatus() {
        this.count = count;

        if (weight <= minWeight) {
            this.count = count;
            count = count - 1;
            return "Dead";
        } else if (weight >= maxWeight) {
            this.count = count;
            count = count - 1;
            return "Exploded";
        } else if (weight > originWeight) {
            this.count = count;
            count = count - 1;
            return "Sleeping";
        } else {
            return "Playing";
        }
    }


    public boolean CompDead = CompDead1();



